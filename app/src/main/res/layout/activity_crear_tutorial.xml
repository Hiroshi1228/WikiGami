<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f9a9004a8f777579ef255ec979d0188b"
    tools:context=".CrearTutorial">

    <Button
        android:id="@+id/tut_miniatura"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/id_usuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Seleccionar miniatura" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/tut_miniatura"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_guardar_tutorial"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/btn_guardar_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Guardar tutorial" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Crear tutorial"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Nombre del origami"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tut_nombre"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tut_nombre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Descripción"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tut_descripcion"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Descripción"
        android:inputType="text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tut_descripcion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Id del vídeo de YouTube"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tut_id_video"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Ejemplo: 4UEtNQ7qQf4"
        android:inputType="text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/id_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerDificultad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Usuario"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinnerDificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tut_id_video"
        android:layout_centerHorizontal="true"
        android:minHeight="48dp" />
</RelativeLayout>